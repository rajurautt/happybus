{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/index.html"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/driver",
      "destination": "/index.html"
    },
    {
      "source": "/driver/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/student",
      "destination": "/index.html"
    },
    {
      "source": "/student/(.*)",
      "destination": "/index.html"
    }
  ]
}